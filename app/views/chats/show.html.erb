<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2><%= @user.name %> さんとのチャット</h2>

      <table class="message table table-sm">
        <thead>
          <tr>
            <th style="text-align: left"><%= current_user.name %></th>
            <th style="text-align: right"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
              <tr>
                <th style="text-align: reft;"><%= chat.message %></th>
                <th></th>
              </tr>
            <% else %>
              <tr>
                <th></th>
                <th style="text-align: right;"><%= chat.message %></th>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%= form_with model: @chat, remote: true do |f| %>
        <div class="form-group">
          <%= f.text_field :message, class: "form-control" %>
        </div>
        <%= f.hidden_field :room_id %>
      <% end %>
    </div>
  </div>
</div>