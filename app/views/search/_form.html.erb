<% if user_signed_in? %>
<div class="text-center mt-1">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :value %>
    <%= f.select :model, options_for_select( User: "user", Book: "book") %>
    <%= f.select :how, options_for_select( "完全一致": "match",
                                                    "前方一致": "forward",
                                                    "後方一致": "backward",
                                                    "部分一致": "partical") %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<% end %>